<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#E8E8E8" />
            <stroke
                android:width="1dp"
                android:color="#D0D0D0" />
        </shape>
    </item>

    <!-- Secondary Progress (if needed) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <gradient
                    android:startColor="#FFB3E5FC"
                    android:endColor="#FF81D4FA"
                    android:type="linear"
                    android:angle="0" />
            </shape>
        </clip>
    </item>

    <!-- Main Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <gradient
                    android:startColor="#FF4CAF50"
                    android:centerColor="#FF66BB6A"
                    android:endColor="#FF4CAF50"
                    android:type="linear"
                    android:angle="0" />
                <stroke
                    android:width="0.5dp"
                    android:color="#FF388E3C" />
            </shape>
        </clip>
    </item>

</layer-list>