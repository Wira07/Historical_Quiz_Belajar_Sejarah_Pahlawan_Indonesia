<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Main Background Gradient -->
    <gradient
        android:startColor="#FF4CAF50"
        android:centerColor="#FF66BB6A"
        android:endColor="#FF388E3C"
        android:type="radial"
        android:gradientRadius="32dp" />

    <!-- Border Stroke -->
    <stroke
        android:width="2dp"
        android:color="#FF2E7D32" />

    <!-- Size -->
    <size
        android:width="64dp"
        android:height="64dp" />

    <!-- Inner Shadow Effect -->
    <solid android:color="@android:color/transparent" />

</shape>